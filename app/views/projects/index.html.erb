<h1>My Projects</h1>

<% @projects.each do |project| %>
  <div class="post">
    <h3><%= link_to project.title, project %> <br><span class="date"> <%= project.created_at.strftime('%Y, %B %d') %></span></h3>
    <p><%= truncate(project.description, length: 80,) %></p>
    <a href="<%= project.link %>" target="_blank">Visit <%= project.title %></a>
  </div>
<% end %>

<%= will_paginate @posts %>

<div class="sign_out">
  <% if user_signed_in? %>
  <li><%= link_to "New Project", new_project_path%></li>
  <% end %>
</div>
