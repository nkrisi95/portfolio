<h1><%= @project.title %></h1>

<p>
  <%= @project.description %>
</p>


<a href="http://<%= @project.link %>" target="_blank"><%= @project.link %></a>


<br>
<br>

<% if user_signed_in? %>
  <%= link_to "Edit Project", edit_project_path(@project) %>
  <%= link_to "Delete Project", post_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
<% end %>
